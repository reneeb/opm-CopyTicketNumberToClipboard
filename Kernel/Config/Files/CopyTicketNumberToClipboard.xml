<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Config">
    <ConfigItem Name="Frontend::Output::FilterElementPost###CopyTicketNumberToClipboard" Required="0" Valid="1">
        <Description Translatable="1">Change ticket mask.</Description>
        <Group>CopyTicketNumberToClipboard</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterElementPost::CopyTicketNumberToClipboard</Item>
                <Item Key="Debug">0</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketZoom">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CopyTicketNumberToClipboard::Template" Required="0" Valid="1">
        <Description Translatable="1">Defines the format of the copied ticket number.</Description>
        <Group>CopyTicketNumberToClipboard</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex=""> [[% Config("Ticket::Hook") %][% Config("Ticket::HookDivider") %][% Data.TicketNumber %]]</String>
        </Setting>
    </ConfigItem>
</otrs_config>
